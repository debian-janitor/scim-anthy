@DPATCH@
diff -urNad scim-anthy-0.8.0~/src/Makefile.am scim-anthy-0.8.0/src/Makefile.am
--- scim-anthy-0.8.0~/src/Makefile.am	2005-12-06 23:07:41.000000000 +0900
+++ scim-anthy-0.8.0/src/Makefile.am	2005-12-06 23:08:47.000000000 +0900
@@ -36,7 +36,7 @@
 #
 # IMEngine Module
 #
-moduledir = @SCIM_MODULEDIR@/IMEngine
+moduledir = @SCIM_MODULEDIR@/`pkg-config --variable=scim_binary_version scim`/IMEngine
 module_LTLIBRARIES = anthy.la
 
 anthy_la_SOURCES = \
@@ -73,7 +73,7 @@
 SETUP_MODULE = anthy-imengine-setup.la
 endif
 
-setupmoduledir           = @SCIM_MODULEDIR@/SetupUI
